    <script>
        let inventory = JSON.parse(localStorage.getItem('liquorInventory')) || [
            { id: 1, name: "Pineapple Rum", category: "Rum", size: "750ml", level: "75%", location: "Bar Cart" }
        ];
        let editingId = null;

        function saveData() {
            localStorage.setItem('liquorInventory', JSON.stringify(inventory));
        }

        function showAddForm() {
            document.getElementById('addForm').classList.remove('hidden');
            document.getElementById('formTitle').textContent = 'Add New Bottle';
            editingId = null;
            clearForm();
        }

        function clearForm() {
            document.getElementById('bottleName').value = '';
            document.getElementById('bottleCategory').value = 'Whiskey';
            document.getElementById('bottleSize').value = '750ml';
            document.getElementById('bottleLevel').value = '100%';
            document.getElementById('bottleLocation').value = 'Bar Cart';
        }

        function cancelForm() {
            document.getElementById('addForm').classList.add('hidden');
            editingId = null;
        }

        function saveBottle() {
            const name = document.getElementById('bottleName').value.trim();
            if (!name) return;

            const bottle = {
                id: editingId || Date.now(),
                name: name,
                category: document.getElementById('bottleCategory').value,
                size: document.getElementById('bottleSize').value,
                level: document.getElementById('bottleLevel').value,
                location: document.getElementById('bottleLocation').value
            };

            if (editingId) {
                const index = inventory.findIndex(item => item.id === editingId);
                inventory[index] = bottle;
            } else {
                inventory.push(bottle);
            }

            saveData();
            renderInventory();
            cancelForm();
        }

        function editBottle(id) {
            const bottle = inventory.find(item => item.id === id);
            if (!bottle) return;

            editingId = id;
            document.getElementById('formTitle').textContent = 'Edit Bottle';
            document.getElementById('bottleName').value = bottle.name;
            document.getElementById('bottleCategory').value = bottle.category;
            document.getElementById('bottleSize').value = bottle.size;
            document.getElementById('bottleLevel').value = bottle.level;
            document.getElementById('bottleLocation').value = bottle.location;
            document.getElementById('addForm').classList.remove('hidden');
        }

        function deleteBottle(id) {
            if (confirm('Are you sure you want to delete this bottle?')) {
                inventory = inventory.filter(item => item.id !== id);
                saveData();
                renderInventory();
            }
        }

        function getCategoryBadgeClass(category) {
            const classes = {
                'Whiskey': 'badge-whiskey',
                'Rum': 'badge-rum',
                'Vodka': 'badge-vodka',
                'Gin': 'badge-gin',
                'Tequila': 'badge-tequila'
            };
            return classes[category] || 'badge-default';
        }

        function getLevelClass(level) {
            if (level === '100%' || level === '75%') return 'level-full';
            if (level === '50%') return 'level-medium';
            return 'level-low';
        }

        function renderInventory() {
            const inventoryDiv = document.getElementById('inventory');
            const emptyState = document.getElementById('emptyState');
            
            if (inventory.length === 0) {
                inventoryDiv.innerHTML = '';
                emptyState.classList.remove('hidden');
                updateStats();
                return;
            }

            emptyState.classList.add('hidden');

            // Group by category
            const grouped = inventory.reduce((acc, item) => {
                if (!acc[item.category]) acc[item.category] = [];
                acc[item.category].push(item);
                return acc;
            }, {});

            let html = '';
            Object.entries(grouped).forEach(([category, items]) => {
                html += `
                    <div class="category-section">
                        <h2 class="category-title">
                            ü•É ${category} (${items.length})
                        </h2>
                        <div class="bottles-grid">
                            ${items.map(item => `
                                <div class="bottle-card">
                                    <div class="bottle-header">
                                        <h3 class="bottle-name">${item.name}</h3>
                                        <div class="bottle-actions">
                                            <button class="action-btn" onclick="editBottle(${item.id})">‚úèÔ∏è</button>
                                            <button class="action-btn delete" onclick="deleteBottle(${item.id})">üóëÔ∏è</button>
                                        </div>
                                    </div>
                                    <div class="bottle-details">
                                        <div class="detail-row">
                                            <span class="detail-label">Size:</span>
                                            <span class="detail-value">${item.size}</span>
                                        </div>
                             